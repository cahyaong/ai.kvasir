<UserControl
  x:Class="nGratis.AI.Kvasir.Client.ParsingStatisticsViewPart"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:client="clr-namespace:nGratis.AI.Kvasir.Client"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:wpf="http://schemas.ngratis.com/2014/core"
  d:DataContext="{d:DesignInstance client:CardSetViewModel}"
  mc:Ignorable="d">
  <StackPanel wpf:ChildrenMargin.Value="0,10" Orientation="Vertical">
    <wpf:AweTile Header="Not Parsed Cards" Value="{Binding NotParsedCardCount, Mode=OneWay}" />
    <Grid wpf:ChildrenMargin.Value="10,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <wpf:AweTile
        Grid.Column="0"
        Header="Valid Cards"
        Value="{Binding ValidCardCount, Mode=OneWay}" />
      <wpf:AweTile
        Grid.Column="1"
        Header="Invalid Cards"
        Value="{Binding InvalidCardCount, Mode=OneWay}" />
    </Grid>
  </StackPanel>
</UserControl>