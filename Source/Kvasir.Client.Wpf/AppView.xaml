  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:olympus="http://schemas.ngratis.com/2014/olympus"
  xmlns:self="clr-namespace:nGratis.AI.Kvasir.Client.Wpf"
